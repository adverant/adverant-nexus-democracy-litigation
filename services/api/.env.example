# Server Configuration
NODE_ENV=development
PORT=8080
HOST=0.0.0.0

# Database Configuration
DATABASE_HOST=nexus-postgres.nexus.svc.cluster.local
DATABASE_PORT=5432
DATABASE_NAME=nexus_auth
DATABASE_USER=nexus_user
DATABASE_PASSWORD=your_database_password_here
DATABASE_MAX_CONNECTIONS=20
DATABASE_IDLE_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT=10000

# Redis Configuration (for BullMQ job queue)
REDIS_HOST=nexus-redis.nexus.svc.cluster.local
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# GraphRAG Service
GRAPHRAG_URL=http://nexus-graphrag.nexus.svc.cluster.local:9000
GRAPHRAG_API_KEY=your_graphrag_api_key_here

# DocAI Service
DOCAI_URL=http://nexus-docai.nexus.svc.cluster.local:8080
DOCAI_API_KEY=your_docai_api_key_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_ISSUER=https://api.adverant.ai
JWT_AUDIENCE=democracy-litigation-api

# File Upload Configuration
UPLOAD_MAX_FILE_SIZE=104857600
UPLOAD_STORAGE_PATH=/data/uploads
UPLOAD_ALLOWED_MIME_TYPES=application/pdf,image/jpeg,image/png,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Rate Limiting
RATE_LIMIT_READ_WINDOW_MS=60000
RATE_LIMIT_READ_MAX_REQUESTS=60
RATE_LIMIT_WRITE_WINDOW_MS=60000
RATE_LIMIT_WRITE_MAX_REQUESTS=30

# CORS Configuration
CORS_ORIGIN=https://dashboard.adverant.ai,http://localhost:3000
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# WebSocket Configuration
WS_ENABLED=true
WS_PATH=/ws
WS_HEARTBEAT_INTERVAL=30000

# Job Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3
QUEUE_BACKOFF_DELAY=5000

# H3 Spatial Configuration
H3_DEFAULT_RESOLUTION=9
H3_MIN_RESOLUTION=6
H3_MAX_RESOLUTION=12

# Deadline Calculation
DEADLINE_TIMEZONE=America/New_York
DEADLINE_BUSINESS_DAYS_ONLY=true

# Feature Flags
FEATURE_VRA_PRECEDENT_SEARCH=true
FEATURE_DOCUMENT_TRIAGE=true
FEATURE_H3_ALIGNMENT=true
FEATURE_EXPERT_WITNESS_DB=true
FEATURE_LEGISLATIVE_HISTORY=true
